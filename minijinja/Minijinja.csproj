<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="minijinja-csbindgen/target/release/libminijinja_cabi.*" Link="%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest"/>
    <Content Include="minijinja-csbindgen/target/release/deps/*" Link="deps/%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest"/>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="Build">
    <Exec Command="./minijinja-csbindgen/generate-binding.sh" />
  </Target>

</Project>
